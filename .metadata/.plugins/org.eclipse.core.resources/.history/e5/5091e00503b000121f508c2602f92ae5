package uk.co.samatkins.ld26;

import com.badlogic.gdx.graphics.g2d.SpriteBatch;
import com.badlogic.gdx.graphics.glutils.ShapeRenderer;
import com.badlogic.gdx.scenes.scene2d.Actor;

public class ImageGrid extends Actor {
	
	public enum BlockType {
		EMPTY,
		SOLID,
		PLACED
	};
	
	private int gridWidth;
	private int gridHeight;
	
	private float blockWidth;
	private float blockHeight;
	
	private BlockType[][] grid;
	private ShapeRenderer shapeRenderer;
	
	public ImageGrid(float x, float y, float width, float height, int gridWidth, int gridHeight) {
		
		this.setBounds(x, y, width, height);
		
		this.gridWidth = gridWidth;
		this.gridHeight = gridHeight;
		
		this.blockWidth = this.getWidth() / this.gridWidth;
		this.blockHeight = this.getHeight() / this.gridHeight;
		
		this.shapeRenderer = new ShapeRenderer();
		
		this.grid = new BlockType[gridWidth][gridHeight];
	}
	
	@Override
	public void draw(SpriteBatch batch, float parentAlpha) {
		super.draw(batch, parentAlpha);
		batch.end();
		
		
		
		batch.begin();
	}
}
